            <ComboBoxItem Content="Member"/>
        </ComboBox>
        <Button Name="btnSave" Content="บันทึก" HorizontalAlignment="Left" Margin="416,126,0,0" VerticalAlignment="Top" Width="81" Height="35" Click="btnSave_Click" FontSize="14"/>
        <Label Content="สถานะ" HorizontalAlignment="Left" Margin="55,119,0,0" VerticalAlignment="Top" FlowDirection="RightToLeft" FontSize="14"/>
        <ComboBox x:Name="cbbStatus" HorizontalAlignment="Left" Margin="110,123,0,0" VerticalAlignment="Top" Width="118" FontSize="14">
            <ComboBoxItem Content="ใช้งาน" IsSelected="True"/>
            <ComboBoxItem Content="ไม่ใช้งาน"/>
        </ComboBox>
        <Label Content="***กรณีเพิ่ม User ระบบจะนำ username ไปเป็น Password ด้วย" HorizontalAlignment="Left" Margin="55,169,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#FFFF0202" ForceCursor="True"/>

    </Grid>
</Window>
